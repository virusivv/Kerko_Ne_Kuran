<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <ImageView
        android:id="@+id/separator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/subject_background_only_top"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:adjustViewBounds="true"
        >

    </ImageView>

    <TextView
        android:id="@+id/tvSelectLanguage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="25dp"
        android:text="@string/select_language"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/separator" />

    <Spinner
        android:id="@+id/spinnerReadLanguage"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        app:layout_constraintBottom_toBottomOf="@id/tvSelectLanguage"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="@color/black"/>

    <TextView
        android:id="@+id/tvSelectSurah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="15sp"
        android:text="@string/select_surah"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSelectLanguage" />

    <Spinner
        android:id="@+id/spinnerSurah"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        app:layout_constraintBottom_toBottomOf="@id/tvSelectSurah"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="@color/black"/>

    <TextView
        android:id="@+id/tvSelectAyah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/spinnerAyah"
        android:layout_marginTop="15dp"
        android:text="@string/select_ayah"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@id/tvSelectSurah"
        app:layout_constraintTop_toBottomOf="@id/tvSelectSurah" />

    <Spinner
        android:id="@+id/spinnerAyah"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinnerSurah"
        android:layout_marginEnd="30dp"
        app:layout_constraintBottom_toBottomOf="@id/tvSelectAyah"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="@color/black"/>


    <View
        android:id="@+id/viewDivider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/bordered_round_background"
        android:backgroundTint="@color/orange"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSelectAyah" />

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/viewDivider">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tvBismillahReadQuran"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="@string/in_the_name"
                android:textColor="@color/black"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tvAyahTextReadQuran"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="30dp"
                android:textIsSelectable="true"
                android:textSize="18sp"
                android:text=""
                android:textColor="@color/black"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btnPrevious"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/read_quran_buttons"
                    android:layout_alignParentLeft="true"
                    android:textColor="@color/white"
                    android:padding="10dp"
                    android:visibility="invisible"
                    android:text="@string/previous_page"/>
                <Button
                    android:id="@+id/btnNext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/read_quran_buttons"
                    android:layout_alignParentRight="true"
                    android:padding="10dp"
                    android:textColor="@color/white"
                    android:visibility="invisible"
                    android:text="@string/next_page"/>
            </RelativeLayout>

            <ImageView
                android:id="@+id/bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/subject_background_only_top"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:adjustViewBounds="true"
                />
        </LinearLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>