<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LanguageSelector" tools:layout_editor_absoluteY="81dp">


    <Button
            android:text="Button"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnSaveLanguageSelector"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" android:layout_marginRight="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/rdbGroup"/>
    <RadioGroup
            android:id="@+id/rdbGroup"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp" android:layout_marginRight="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="16dp">
        <RadioButton
                android:text="Shqip"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:id="@+id/rdbShqipLanguageSelector"
                tools:layout_editor_absoluteY="16dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp" android:layout_marginRight="16dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp" android:onClick="onRadioButtonClicked"/>
        <RadioButton
                android:text="English"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:id="@+id/rdbAnglishtLanguageSelector"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="16dp" android:layout_marginStart="16dp" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/rdbShqipLanguageSelector"
                android:onClick="onRadioButtonClicked"/>
        <RadioButton
                android:text="Deutsch"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:id="@+id/rdbGjermanishtLanguageSelector"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp" android:layout_marginRight="16dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/rdbAnglishtLanguageSelector"
                android:onClick="onRadioButtonClicked"/>
        <RadioButton
                android:text="Türkçe"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:id="@+id/rdbTurqishtLanguageSelector"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp" android:layout_marginRight="16dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/rdbGjermanishtLanguageSelector"
                android:onClick="onRadioButtonClicked"/>
    </RadioGroup>
</android.support.constraint.ConstraintLayout>