<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical" >
    <RelativeLayout
            android:id="@+id/rlparent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >
        <RelativeLayout
                android:id="@+id/rlcontents"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="0dp"
                android:layout_alignParentTop="true"
                android:layout_above="@+id/imgborderbottom">
            <ImageView
                    android:id="@+id/imgbordertop"
                    android:layout_width="fill_parent"
                    android:layout_marginTop="0dp"
                    android:layout_height="wrap_content"/>

            <ScrollView
                    android:id="@+id/scrlvwmain"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/viewDivider"
                    android:orientation="vertical">

                <RelativeLayout
                        android:id="@+id/rlcontentsscroll"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >
                    <ImageView
                            android:id="@+id/imgbismillah"
                            android:layout_width="200dp"
                            android:layout_height="150dp"
                            android:background="@drawable/bismillah"
                            android:layout_centerHorizontal="true" android:scaleType="center" android:scaleX=".75"
                            android:scaleY=".5"/>
                    <TextView
                            android:id="@+id/txtbismillah"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/imgbismillah"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="23dp"
                            android:text="Bismillahir-rahmanir-rahim"
                            android:textSize="18sp" />

                    <TextView
                            android:id="@+id/txtpershkrimet"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_below="@+id/txtbismillah"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="30dp"
                            android:layout_marginTop="23dp"
                            android:textIsSelectable="true"
                            android:textSize="18sp" />
                </RelativeLayout>
            </ScrollView>
            <View
                    android:id="@+id/viewDivider"
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/cboAyahs"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:background="#3A86B7" />

            <TextView
                    android:id="@+id/textViewajetet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/cboAyahs"
                    android:layout_marginTop="15dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="30dp"
                    android:paddingRight="15dp"
                    android:text="@string/zgjedhajetin" />

            <Spinner
                    android:id="@+id/cboSurah"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="30dp"/>

            <Spinner
                    android:id="@+id/cboAyahs"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="30dp"
                    android:layout_below="@+id/cboSurah"/>

            <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/cboSurah"
                    android:layout_toLeftOf="@+id/cboSurah"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="30dp"
                    android:text="@string/zgjedhsuren_shqip" />
        </RelativeLayout>
        <ImageView
                android:id="@+id/imgborderbottom"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"/>
    </RelativeLayout>
</LinearLayout>